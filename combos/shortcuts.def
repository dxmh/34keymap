// Shortcuts
COMB(prev_window, ALT_TAB, KC_F, KC_P)
COMB(prev_app, SUPER_TAB, KC_W, KC_F, KC_P)
COMB(cut, KC_CUT, KC_Z, KC_X)
COMB(copy, KC_COPY, KC_X, KC_C)
COMB(paste, KC_PASTE, KC_C, KC_D)
COMB(undo, KC_UNDO, KC_Z, KC_D)

// VIM
// Each is an extension of the colon combo (on RTHUMB1, HM_I)
SUBS(vim_write, ":up\n", RTHUMB1, HM_I, KC_W) // like :w
SUBS(vim_exit, ":x\n", RTHUMB1, HM_I, KC_X) // like :x
SUBS(vim_quit, ":q\n", RTHUMB1, HM_I, KC_Q) // like :q
SUBS(vim_explore, ":E\n", RTHUMB1, HM_I, HM_S) // like "go up dir" in netrw
SUBS(vim_select_buffer, ":ls\n:e#", RTHUMB1, HM_I, KC_F) // like :files
