// Shortcuts
COMB(prev_window, ALT_TAB, KC_F, KC_P)
COMB(prev_app, SUPER_TAB, KC_W, KC_F, KC_P)
COMB(cut, KC_CUT, KC_Z, KC_X)
COMB(copy, KC_COPY, KC_X, KC_C)
COMB(paste, KC_PASTE, KC_C, KC_D)
COMB(undo, KC_UNDO, KC_Z, KC_D)
COMB(reset, RESET, KC_Z, KC_X, KC_C, KC_D, KC_L, KC_U, KC_Y, KC_QUOT)

// VIM
// Each is an extension of the colon combo (on RTHUMB1, HM_I)
SUBS(vim_write, ":up\n", RTHUMB1, HM_I, KC_W) // like :w
SUBS(vim_exit, ":x\n", RTHUMB1, HM_I, KC_X) // like :x
SUBS(vim_quit, ":q\n", RTHUMB1, HM_I, KC_Q) // like :q
SUBS(vim_explore, ":E\n", RTHUMB1, HM_I, HM_S) // like "go up dir" in netrw
SUBS(vim_select_buffer, ":ls\n:e#", RTHUMB1, HM_I, KC_F) // like :files

// Linux
SUBS(sudo, "sudo ", RTHUMB1, HM_S, KC_U)
SUBS(sudo_i, "sudo -i\n", RTHUMB1, HM_S, KC_U, HM_I)
SUBS(systemctl, "systemctl ", RTHUMB1, HM_S, HM_T)
SUBS(journalctl, "journalctl ", RTHUMB1, KC_J, HM_T)
SUBS(dir_www, "/var/www/", KC_SLSH, KC_W)
SUBS(dir_log, "/var/log/", KC_SLSH, KC_L)
SUBS(dir_etc, "/etc/", KC_SLSH, HM_E)

// Gnome shell
COMB(push_to_talk, G(UK_BSLS), KC_W, KC_P)
COMB(quit, G(KC_Q), KC_X, KC_C, KC_D)
COMB(overview, G(KC_SPACE), HM_R, HM_S, HM_T)
COMB(fullscreen, G(KC_F), KC_W, KC_F, KC_P)
