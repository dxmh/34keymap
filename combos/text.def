// Cursor navigation
COMB(word_back, C(KC_LEFT), HM_LEFT, HM_DOWN)
COMB(word_forward, C(KC_RIGHT), HM_RGHT, HM_DOWN)
COMB(doc_begin, C(KC_HOME), KC_HOME, KC_UP)
COMB(doc_end, C(KC_END), KC_UP, KC_END)

// Text selection
SUBS(sel_word, SS_DOWN(X_LCTL) SS_TAP(X_LEFT) SS_DOWN(X_LSFT) SS_TAP(X_RGHT) SS_UP(X_LSFT) SS_UP(X_LCTL), HM_LEFT, HM_RGHT)
SUBS(sel_line, SS_TAP(X_HOME) SS_DOWN(X_LSFT) SS_TAP(X_END) SS_UP(X_LSFT), HM_LEFT, HM_DOWN, HM_RGHT)
SUBS(sel_all, SS_LCTL("a"), HM_PNKY, HM_LEFT, HM_DOWN, HM_RGHT)

// Text deletion
COMB(del_word_back, C(KC_BSPC), LTHUMB1, HM_LEFT, HM_DOWN)
COMB(del_word_forward, C(KC_DEL), LTHUMB1, HM_RGHT, HM_DOWN)
SUBS(del_end, SS_DOWN(X_LSFT) SS_TAP(X_END) SS_UP(X_LSFT) SS_TAP(X_BSPC), LTHUMB1, KC_END)
SUBS(del_home, SS_DOWN(X_LSFT) SS_TAP(X_HOME) SS_UP(X_LSFT) SS_TAP(X_BSPC), LTHUMB1, KC_HOME)
SUBS(del_line, SS_TAP(X_HOME) SS_DOWN(X_LSFT) SS_TAP(X_END) SS_TAP(X_RGHT) SS_UP(X_LSFT) SS_TAP(X_BSPC), LTHUMB1, HM_LEFT, HM_DOWN, HM_RGHT)
